<script src="js/jquery.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/jquery.cloud9carousel.js"></script>
<script>
	$(function() {
  		var caro = $("#caro")
		caro.Cloud9Carousel({
        	itemClass: "card",
        	farScale: 0.2,
        	bringToFront: true,
        	speed: 8,
        	buttonLeft: $("#buttons .left"),
  			buttonRight: $("#buttons .right"),
        	onLoaded: function() {
        		caro.addClass('loaded')
        		var item = $(caro).data("carousel").nearestItem()
        		var itemElement = $(item).attr("element")
        		$(itemElement).addClass('active')
        	},
        	onAnimationFinished: function( carousel ) {
        		$('.card').removeClass('active')
        		var item = $(caro).data("carousel").nearestItem()
        		var itemElement = $(item).attr("element")
        		$(itemElement).addClass('active')
  			}
      	});
      	$('.card').click(function(){$(this).addClass('active')})
  	});

	var panelTarget;
	$('.card li a').click(function(){
  		panelTarget = $(this).attr('href');
    	$('.collapse.in').collapse('hide');
	});
	$('.modal').on('shown.bs.modal', function(){
		console.log(panelTarget);
	    $(panelTarget).collapse('show');
	});
</script>

